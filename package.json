{
  "name": "spacepipe",
  "version": "1.0.2",
  "description": "Build Management for Meteor Applications",
  "main": "dist/build.js",
  "scripts": {
    "start": "webpack -w",
    "build": "webpack -p",
    "lint": "eslint .; exit 0;",
    "test": "ava tests/**/*.js",
    "test-w": "ava -w tests/**/*.js",
    "prepublish": "npm build && npm test"
  },
  "bin": "cli.js",
  "author": "Pascal Kaufmann",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reactivec/spacepipe.git"
  },
  "bugs": {
    "url": "https://github.com/reactivec/spacepipe/issues"
  },
  "homepage": "https://github.com/reactivec/spacepipe",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-2": "^6.22.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "shebang-loader": "0.0.1",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "async-child-process": "^1.1.1",
    "async-file": "^2.0.2",
    "moment": "^2.18.1",
    "promise": "^7.1.1",
    "vorpal": "^1.12.0",
    "vorpal-rc": "^1.1.0"
  },
  "babel": {
    "presets": [
      "env",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": [
      "import"
    ],
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "server": true,
      "browser": false,
      "expect": false
    },
    "env": {
      "node": true,
      "browser": false,
      "es6": true
    }
  }
}
